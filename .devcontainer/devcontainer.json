{
    "name": "Windows On Linux Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "privileged": true,
    "runArgs": [
        "--cgroupns=host",
        "--device=/dev/kvm",
        "--device=/dev/net/tun",
        "-v=/sys/fs/cgroup:/sys/fs/cgroup:rw",
        "--cap-add=NET_ADMIN",
        "--cap-add=SYS_ADMIN"
    ],
    "appPort": [
        "8080:8080",
        "3389:3389/tcp",
        "3389:3389/udp"
    ],
    "containerEnv": {
        "MEMORY": "4096",
        "CPU": "4",
        "DISK_SIZE": "50"
    },
    "onCreateCommand": "/startup.sh",
    "waitFor": "onCreateCommand",
    "postCreateCommand": "/root/novnc/utils/novnc_proxy --vnc localhost:5900 --listen 8080",
    "remoteUser": "root"
}